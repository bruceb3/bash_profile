# vim: ft=sh sw=2

## Git functions for PS1
git_branch()
{
  branch=$(git branch --no-color 2>/dev/null | awk '$1 == "*" {print $NF}')
  echo ${branch#* }
}

git_ref()
{
  ref=$(git log -n 1 --oneline 2>/dev/null)
  echo ${ref%% *}
}

git_ps1_info()
{
  branch=$(git_branch)
  if [[ -z $branch ]]
  then
    echo ''
  else 
    ref=$(git_ref)
    echo "($branch:$ref):"
  fi
}

